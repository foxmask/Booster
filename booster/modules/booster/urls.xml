<?xml version="1.0" encoding="utf-8"?>
<suburls xmlns="http://jelix.org/ns/suburls/1.0">

    <url pathinfo="/add"            action="default:add"/>
    <url pathinfo="/saveitem"       action="default:saveItem"/>
    <url pathinfo="/saveversion"    action="default:saveVersion"/>
    <url pathinfo="/view/:id-:name" action="default:viewItem">
        <param name="id"  type="number"/>
        <param name="name"  type="string" escape="true"/>
    </url>
    <url pathinfo="/edit/item/:id-:name" action="default:editItem">
        <param name="id"  type="number"/>
        <param name="name"  type="string" escape="true"/>
    </url>
    <url pathinfo="/add/version/:id-:name" action="default:addVersion">
        <param name="id"  type="number"/>
        <param name="name"  type="string" escape="true"/>
    </url>
</suburls>
